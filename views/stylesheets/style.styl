@import './mixins/style'

@import './module/header'
@import './module/createAcFm'
@import './module/footer'

body
	width 100%
	margin 0
	font 14px Arial, sans-serif
	background-color rgb(245,245,245)
.container
	width 960px
	margin 0 auto
ul
	margin 0
	padding 0
	list-style none
a
	text-decoration none

.products-grid
	& > li
		width 32%
		float left
		margin-right 1%
		overflow hidden
.addToCart
	margin 10px 0
	text-align center
	& > a
		display inline-block
		padding 5px 10px
		color rgb(255,255,255)
		background-color rgb(200,100,50)
		border-radius(3px)
		transition(all 300ms ease 0s)
		&:hover
			background-color rgb(50,100,200)
			transition(all 300ms ease 0s)
img
	border-radius(50%)
	box-shadow(0 0 1px 2px rgb(200,200,200))

.cf:after
	content "."
	visibility hidden
	display block
	height 0
	font-size 0
	clear both


