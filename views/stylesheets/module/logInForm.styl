#logInForm
	position absolute
	top 30px
	right 0
	z-index 2
	padding 5px
	border 1px solid rgb(160,160,160)
	background-color rgb(245,245,245)
	& > label
		display inline-block
		margin 5px 0
	& > input
		display block
		margin-bottom 5px
		padding 5px
		border none
		border-radius(3px)
		transition(all 300ms ease 0s)
		&:focus
			// border 1px solid rgb(50,100,200)
			box-shadow(0 0 0px 3px rgba(50,100,200,0.3))
			transition(all 300ms ease 0s)