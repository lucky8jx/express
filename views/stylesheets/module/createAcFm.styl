#createAcFm
	// margin 0 0 10px 5px
	width 250px
	margin 0 auto
	& > h2
		font-size 16px
	& > label
		position relative
		font-size 13px
		font-weight bold
		color rgb(51, 51, 51)
	& > input
		display block
		padding 7px 8px
		margin 10px 0 5px
		background-color rgb(250, 250, 250)
		border 1px solid rgb(204, 204, 204)
		border-radius(3px)
		box-shadow(inset 0 1px 2px rgba(0, 0, 0, 0.075))
	> p
		margin 0 0 5px 0
		font-size 10px
		color rgb(150, 150, 150)
	& > button
		padding 7px 15px
		font-size 13px
		font-weight bold
		color rgb(255, 255, 255)
		border 1px solid rgb(74, 153, 62)
		background-color rgb(121, 216, 88)
		border-radius(3px)
	> .token
		&:before
			content "(Is token)"
			position absolute
			top 2px
			left 100px
			display block
			color red
			font-size 9px
			width 400px
	> .available
		border-color green
	> .token
	> .unAvailable
		border-color red