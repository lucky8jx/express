#createAcFm
	margin 0 0 10px 5px
	& > h2
		font-size 16px
	& > label
		font-size 13px
		font-weight bold
		color rgb(51, 51, 51)
	& > input
		display block
		padding 7px 8px
		margin 10px 0 15px
		background-color rgb(250, 250, 250)
		border 1px solid rgb(204, 204, 204)
		border-radius(3px)
		box-shadow(inset 0 1px 2px rgba(0, 0, 0, 0.075))
	& > button
		padding 7px 15px
		font-size 13px
		font-weight bold
		color rgb(255, 255, 255)
		border 1px solid rgb(74, 153, 62)
		background-color rgb(121, 216, 88)
		border-radius(3px)