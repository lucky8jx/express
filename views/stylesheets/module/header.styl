@import './searchForm'
@import './logInForm'
.header
	& > .container
		position relative
.wel-message
	float left
	margin 5px 0
	font-size 15px
	color rgb(200,100,50)
.topLink
	float right
	margin 5px 0
	& > li
		float left
		margin-left 15px
		& > a
			color rgb(130,130,130)
			transition(all 300ms ease 0s)
			&:hover
				color rgb(40,100,200)
				transition(all 300ms ease 0s)
.logIn
	position relative
	z-index 2
	&:after
		content ""
		position absolute
		left 50%
		bottom -10px
		display block
		width 0
		height 0
		margin-left -4px
		border 4px solid rgb(245,245,245)
		border-top-color rgb(123,123,123)
.logo
	// margin 0
	text-shadow( 1px 3px 4px rgb(50,50,50))
#mainNav
	// background-color rgb(30,30,30)
	vertical(rgb(20,20,20), rgb(100,100,100), rgb(20,20,20))
.nav
	& > li
		float left
		& > a
			display block
			padding 10px 15px
			font-size 18px
			color rgb(255,255,255)
			transition(all 300ms ease 0s)
			&:hover
				background-color rgb(200,100,50)
				transition(all 300ms ease 0s)
