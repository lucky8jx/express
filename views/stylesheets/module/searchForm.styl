#searchForm
	position absolute
	right 11px
	top 50px
	& > label
		display none
	& > input
		border none
		padding 10px
		border-radius(3px)
		&:focus
			box-shadow(0 0 2px 0 rgba(0,0,0,0.3))
.button
	position absolute
	right -10px
	top -6px
	width 50px
	height 50px
	font-size 0
	color rgba(0,0,0,0)
	text-indent 9999px
	cursor pointer
	background-color rgb(200,100,50)
	border none
	border-radius(50%)
	box-shadow(0 0 2px 0 rgba(0,0,0,0.5))
	transition(all 300ms ease 0s)
	&:before
	&:after
		content ""
		position absolute
		display block
	&:before
		left 5px
		top 5px
		width 40px
		height 40px
		background-color rgb(230,230,230)
		border-radius(50%)
	&:after
		left 50%
		top 50%
		width 0
		heitht 0
		margin -9px 0 0 -2px
		border 9px solid rgb(230,230,230)
		border-left-color rgb(150,150,150)
	&:hover
		background-color rgb(50,100,200)
		transition(all 300ms ease 0s)